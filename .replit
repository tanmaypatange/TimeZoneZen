modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Time Zone Converter"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Production Server"

[[workflows.workflow]]
name = "Time Zone Converter"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "React App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 3000

[[workflows.workflow]]
name = "React Production Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build && npm run serve"
waitForPort = 3000

[deployment]
deploymentTarget = "static"
publicDir = "public"
run = ["sh", "-c", "npm run build && npm run serve"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
